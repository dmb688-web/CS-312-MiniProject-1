<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %> - Project Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
        }
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }
        .post-content {
            font-size: 1.1rem;
            line-height: 1.8;
        }
        .post-meta {
            color: #6c757d;
            border-bottom: 1px solid #0F5132;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
        .action-buttons {
            gap: 0.5rem;
        }
           </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                Project Blog
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                 Home
                </a>
                <a class="nav-link" href="/new">
                  New Post
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Back Button -->
                <div class="mb-3">
                    <a href="/" class="btn btn-outline-secondary">
                     Back Home
                    </a>
                </div>

                <!-- Post Content -->
                <article class="bg-white">
                    <h1 class="display-5 mb-4"><%= post.title %></h1>
                    
                    <div class="post-meta">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                               
                                <strong>by <%= post.author %></strong>
                            </div>
                            <div class="text-end">
                                <div>
                                                                       Published: <%= formatDate(post.createdAt) %>
                                </div>
                                <% if (post.updatedAt.getTime() !== post.createdAt.getTime()) { %>
                                    <div class="text-muted small">
                                                                                Last updated: <%= formatDate(post.updatedAt) %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="post-content">
                        <p style="white-space: pre-line;"><%= post.content %></p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex action-buttons mt-4 pt-4 border-top">
                        <a href="/post/<%= post.id %>/edit" class="btn btn-warning">
                            Edit Post
                        </a>
                        
                        <form method="POST" action="/post/<%= post.id %>?_method=DELETE" 
                              onsubmit="return confirm('Are you sure you want to delete this post?')" 
                              class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                Delete Post
                            </button>
                        </form>
                    </div>
                </article>
            </div>
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>